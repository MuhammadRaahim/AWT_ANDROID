<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.snakes.awt_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/img_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AWT_android"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:targetApi="m">
        <activity
            android:name=".Activities.DigitalCardActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.DonateActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AnalyticsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminSchoolDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminAddSchoolActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminSchoolActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminStaffDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminStaffActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminAddStaffActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.DasterKhawanDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminDasterKhawanActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AddDasterKhawanActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ServiceDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.CreateServiceActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminServiceActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/API_KEY" />
        <meta-data
            android:name="android.nfc.action.TECH_DISCOVERED"
            android:resource="@xml/nfc_tech_filter" />

        <activity
            android:name=".Activities.WebActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>