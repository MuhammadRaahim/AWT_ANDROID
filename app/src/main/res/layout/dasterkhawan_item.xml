<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_130sdp"
        android:layout_margin="@dimen/_12sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/_12sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_event"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/img_profile_cover_placeholder"
                android:transitionName="@string/str_dasterkhawan_image"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/view_gradient"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/bottom_dark_gradient_for_image"
                app:layout_constraintBottom_toBottomOf="@+id/iv_event"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mc_detail_event"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/iv_stream_event"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_details"
                    app:tint="@color/black" />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:singleLine="true"
                android:maxWidth="300dp"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/worksans_regular"
                android:text="Location"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_maps_pin"
                app:layout_constraintBottom_toBottomOf="@+id/iv_event"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:singleLine="true"
                android:maxWidth="300dp"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/worksans_bold"
                android:text="24 Jan"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:layout_constraintBottom_toBottomOf="@+id/iv_event"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableTint="@color/black"/>
            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:lines="2"
                android:maxLines="2"
                android:singleLine="true"
                android:text="@string/str_dasterkhawan"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_bold"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_location"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="2:00 pm to 4:30 pm"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_event"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</FrameLayout>