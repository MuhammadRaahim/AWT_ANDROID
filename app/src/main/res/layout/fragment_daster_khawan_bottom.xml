<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottom_sheet"
    tools:context=".Fragments.DasterKhawanBottomFragment">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_food_bank"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxLines="2"
        android:singleLine="true"
        android:text="@string/str_dasterkhawan"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_bold"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_5sdp"
       android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/mcv_image"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:singleLine="true"
        android:maxWidth="300dp"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/worksans_regular"
        android:text="Location"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_maps_pin"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:text="2:00 pm to 4:30 pm"
        android:textColor="@color/black"
        android:fontFamily="@font/worksans_regular"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_3sdp"
        android:singleLine="true"
        android:maxWidth="300dp"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/worksans_bold"
        android:text="24 Jan"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_calendar"
        app:layout_constraintTop_toBottomOf="@+id/mcv_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTint="@color/black"/>
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Making someone smile, who is deprived of his family is the best thing in this world."
        android:fontFamily="@font/worksans_regular"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_direction"
        android:textSize="@dimen/_14ssp"
        app:cornerRadius="@dimen/_35sdp"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/white"
        android:backgroundTint="@color/app_color"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"/>


</androidx.constraintlayout.widget.ConstraintLayout>